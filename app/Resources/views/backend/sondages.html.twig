{% extends 'layout.html.twig' %}

{% block title %}Versus - Backend{% endblock %}

{% block body %}
    {% include 'backend/_nav.html.twig' %}
    <section>
        <h1 class="thin">Sondages</h1>

        <table class="centered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Proposition liés</th>
                <th>Crée le</th>
                <th>Supprimer</th>
            </tr>
            </thead>

            <tbody>
            {% for sondage in sondages %}
                <tr>
                    <td>{{ sondage.id }}</td>
                    <td>{{ sondage.titre }}</td>
                    {% if sondage.image %}
                        <td><a href="{{ asset('assets/img/uploaded/' ~ sondage.image) }}">Image</a></td>
                    {% else %}
                        <td>Aucune image</td>
                    {% endif %}
                    <td><a href="{{ path('propositionsFromSondageBackend', {id: sondage.id}) }}">Propositions</a></td>
                    <td>{{ sondage.creationDate|date("d/m/Y") }}</td>
                    <td>
                        <a class="btn-floating btn-large waves-effect waves-light red" href="{{ path('deleteSondage', {id: sondage.id}) }}">
                            <i class="material-icons">clear</i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        section {
            margin-left: 330px;
            margin-right: 30px;
        }
    </style>
{% endblock %}