{% extends "layout.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{ asset("assets/css/loginAndInscription.css") }}">

{% endblock %}

{% block body %}
    {% include 'default/header.html.twig' %}
	{% block content %}
		<div class="container main">
	        <div class="row">
	        	<div class="col s10 m8 l10 offset-s1 offset-m2 offset-l1">
	     			<div class="card z-depth-3">
						{% block fos_user_content %}

							{# {{ form_start(form, {'method': 'post', 'action': path('register'), 'attr': {'id': 'registerform', 'class': 'container'}}) }}

						    {{ form_widget(form) }} #}
						     <form class="container" action="{{ path('register') }}"method="POST">
							    <div class="form-group" id="fos_user_registration_form">

									<div class="red-text">
								        <p>{{ form_errors(form.email) }}</p>
								    </div>

							    	<p class="input-field form-block interactive-label">
          								<i class="material-icons prefix">email</i>
								        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email' } }) }}
								    </p>

									<div class="red-text">
								        <p>{{ form_errors(form.username) }}</p>
								    </div>

							    	<p class="input-field form-block interactive-label">
          								<i class="material-icons prefix">account_circle</i>
								        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username' } }) }}
								    </p>

								    <div class="red-text">
								        <p>{{ form_errors(form.plainPassword.first) }}</p>
								    </div>

							    	<p class="input-field form-block interactive-label">
          								<i class="material-icons prefix">vpn_key</i>
								        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password' } }) }}
								    </p>

								    <div class="red-text">
								        <p>{{ form_errors(form.plainPassword.second) }}</p>
								    </div>

							    	<p class="input-field form-block interactive-label">
          								<i class="material-icons prefix">vpn_key</i>
								        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation' } }) }}
									</p>
							        {{ form_rest(form) }}

							    </div>

								<p class="remember_me_container">
								    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
								    <label for="remember_me">Se souvenir de moi</label>
								</p>

		        				<div class="card-action">
									<a href="{{ path("register") }}" class="round-btn border-btn register">Se connecter</a>
								    <button class="right btn waves-effect waves-light" type="submit" name="action" id="_submit">S'enregister
									    <i class="material-icons right">send</i>
									</button>
									<div style="clear: both;"></div> 
								</div>
							</form>
						{% endblock fos_user_content %}
					</div>
	        	</div>
	        </div>
	    </div>
	{% endblock content %}

{% endblock %}