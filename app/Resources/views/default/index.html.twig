{% block javascripts %}
  {{ parent() }}
  <script src="//code.jquery.com/color/jquery.color-2.1.2.js"></script>
  <script type="text/javascript">$(".dropdown-button").dropdown();</script>
  <script type="text/javascript">
    var i = 0;
    var $elements = $('.circle');
    var nbElement = $elements.size();

    function change() {
      $($elements[i]).toggleClass('item--blur');
      if (i == 0 && $($elements[nbElement - 1]).hasClass('item--blur')) {
        i = nbElement;
      }
      $($elements[i - 1]).toggleClass('item--blur');

      i = (i + 1) % nbElement;
    }

    setInterval(change, 3000);
  </script>
{% endblock %}


