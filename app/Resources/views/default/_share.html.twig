{% if url is not defined or url == null %}
    {% set url = app.request.uri %}
{% endif %}

{% if text is not defined or text == null %}
    {% set text = "Partager depuis versus" %}
{% endif %}


<ul class="social">
	<li>
		<a class="facebook customer share" href="https://www.facebook.com/sharer.php?u={{ url }}&amp;t={{ text }}" title="Partager sur facebook" target="_blank"></a>
	</li>
  <li>
    <a class="twitter customer share" href="https://twitter.com/share?url={{ url }}&amp;text={{ text }}&amp;hashtags=Versus" title="Partager sur twitter" target="_blank"></a>
  </li>
  <li>
    <a class="google_plus customer share" href="https://plus.google.com/share?url={{ url }}" title="Partager sur google plus" target="_blank"></a>
  </li>
</ul>